{
  "name": "tools",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "tools/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/tools",
        "main": "tools/src/index.ts",
        "tsConfig": "tools/tsconfig.lib.json",
        "assets": [
          "tools/*.md",
          {
            "input": "./tools/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./tools/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./tools",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./tools",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "tools/jest.config.ts",
        "forceExit": true
      }
    },
    "format:check": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "tools",
        "commands": [
          "prettier-package-json --list-different",
          "prettier --config ../.prettierrc --ignore-path ../.prettierignore --check ."
        ]
      }
    },
    "format:write": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "tools",
        "commands": [
          "prettier-package-json --write",
          "prettier --config ../.prettierrc --ignore-path ../.prettierignore --write ."
        ]
      }
    }
  }
}
