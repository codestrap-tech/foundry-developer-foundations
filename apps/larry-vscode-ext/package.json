{
  "private": true,
  "name": "larry-vscode-ext",
  "version": "0.0.2",
  "description": "Chat with Larry inside VS Code",
  "main": "./dist/extension.js",
  "files": [
    "dist/**",
    "media/**"
  ],
  "scripts": {
    "build": "tsc -p ./ && node scripts/bundle-webview.mjs",
    "package": "vsce package",
    "watch": "tsc -w -p ./ & node scripts/bundle-webview.mjs --watch"
  },
  "dependencies": {
    "@mdxeditor/editor": "3.49.0",
    "@vscode/webview-ui-toolkit": "1.4.0",
    "cm6-theme-basic-dark": "0.2.0",
    "dompurify": "^3.2.7",
    "highlight.js": "^11.11.1",
    "marked": "^15.0.12",
    "marked-highlight": "^2.2.2",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "@types/vscode": "^1.93.0",
    "esbuild": "0.19.12",
    "preact": "^10.22.0",
    "typescript": "^5.8.3",
    "vsce": "2.15.0"
  },
  "engines": {
    "vscode": "^1.93.0"
  },
  "activationEvents": [
    "onView:larryHome",
    "onStartupFinished",
    "onCustomEditor:larry.artifactEditor"
  ],
  "categories": [
    "Other"
  ],
  "contributes": {
    "configuration": {
      "title": "Larry Coding Assistant",
      "properties": {
        "larry.dbPath": {
          "type": "string",
          "default": "",
          "markdownDescription": "Absolute path for Larry's SQLite DB file. If empty, defaults to '<workspace>/.larry/db/developer-foundations-threads.sqlite'.",
          "scope": "application"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "larry-ai",
          "title": "Larry AI Coding",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "larry-ai": [
        {
          "type": "webview",
          "id": "larryHome",
          "name": "Larry AI Coding Assistant"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "larry.artifactEditor",
        "displayName": "Larry Artifact Editor",
        "selector": [
          {
            "filenamePattern": "**/.larry/artifacts/**/*.md"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "displayName": "Larry Coding Assistant",
  "publisher": "Codestrap"
}
