{
  "name": "x-reason",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/x-reason/src",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": [
        "dist/{projectRoot}"
      ],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": [
    "type:platform"
  ],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/x-reason",
        "main": "packages/x-reason/src/index.ts",
        "tsConfig": "packages/x-reason/tsconfig.lib.json",
        "assets": [
          "packages/x-reason/*.md"
        ]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/x-reason/jest.config.ts"
      }
    },
    "format:check": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/x-reason",
        "commands": [
          "prettier-package-json --list-different",
          "prettier --config ../../.prettierrc --ignore-path ../../.prettierignore --check ."
        ]
      }
    },
    "format:write": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/x-reason",
        "commands": [
          "prettier-package-json --write",
          "prettier --config ../../.prettierrc --ignore-path ../../.prettierignore --write ."
        ]
      }
    }
  }
}
